@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<ul class="navbar-nav">
    @{
        ViewBag.Data = HttpContextAccessor.HttpContext.Session.GetString("Username");
    }
    @if (@ViewBag.Data != null)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Fiber" asp-action="PlanDetails">@ViewBag.Data</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Customer" asp-action="RegisterCustomer">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Customer" asp-action="CustomerLogin">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="AdminControl">Admin</a>
        </li>
    }
</ul>
