@model FiberConnection.FiberConnection.Customer

@{
    ViewData["Title"] = "SignUp";
}
<style>
    .c1 {
        margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */
    }
</style>
<h2 class="text-light">Sign Up</h2>

<hr class="bg-danger"/>
    <div class="card border-light bg-danger mb-3 c1" style="max-width: 30rem;">
        <div class="card-body text-danger">
            <div class="card-header text-light">Sign Up</div>
            <div class="row">
                <div class="col-md-10">
                    <form asp-action="RegisterCustomer" class="border-dark">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CustomerName" class="control-label text-dark">Name</label>
                            <input asp-for="CustomerName" class="form-control" required />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="control-label text-dark">Date Of Birth</label>
                            <input asp-for="DateOfBirth" class="form-control" required />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CustomerAddress" class="control-label text-dark">Address</label>
                            <input asp-for="CustomerAddress" class="form-control" required />
                            <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CustomerPhoneNumber" class="control-label text-dark">Phone Number</label>
                            <input asp-for="CustomerPhoneNumber" class="form-control" required />
                            <span asp-validation-for="CustomerPhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CustomerAadharNo" class="control-label text-dark">Aadhar Number</label>
                            <input asp-for="CustomerAadharNo" class="form-control" required />
                            <span asp-validation-for="CustomerAadharNo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CustomerMailId" class="control-label text-dark">Mail ID</label>
                            <input asp-for="CustomerMailId" class="form-control" required />
                            <span asp-validation-for="CustomerMailId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CustomerPassword" class="control-label text-dark">Password</label>
                            <input asp-for="CustomerPassword" type="password" class="form-control" required />
                            <span asp-validation-for="CustomerPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Sign Up" class="btn  btn-dark btn-outline-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
