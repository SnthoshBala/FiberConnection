@model FiberConnection.FiberConnection.Offer

@{
    ViewData["Title"] = "UpdateOffer";
    Layout = "_AdminLayout";
}

<style>
    .c1 {
        margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */
    }
</style>
<h2 class="text-light">Add Offers</h2>

<hr class="bg-danger" />
<div class="card border-light bg-danger mb-3 c1" style="max-width: 30rem;">
    <div class="card-body text-danger">
        <div class="card-header text-light"> Update Offers</div>
        <div class="row">
            <div class="col-md-10">
                <form asp-action="UpdateOffer">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Voot" class="control-label text-dark"></label>
                        <input asp-for="Voot" class="form-control" />
                        <span asp-validation-for="Voot" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Lionplay" class="control-label text-dark"></label>
                        <input asp-for="Lionplay" class="form-control" />
                        <span asp-validation-for="Lionplay" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Hungamaplay" class="control-label text-dark"></label>
                        <input asp-for="Hungamaplay" class="form-control" />
                        <span asp-validation-for="Hungamaplay" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ultra" class="control-label text-dark"></label>
                        <input asp-for="Ultra" class="form-control" />
                        <span asp-validation-for="Ultra" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Hotstar" class="control-label text-dark"></label>
                        <input asp-for="Hotstar" class="form-control" />
                        <span asp-validation-for="Hotstar" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Netflix" class="control-label text-dark"></label>
                        <input asp-for="Netflix" class="form-control" />
                        <span asp-validation-for="Netflix" class="text-danger"></span>
                    </div>
                    <div class="form-group"> 
                        <label asp-for="Others" class="control-label text-dark"></label>
                        <input asp-for="Others" class="form-control" />
                        <span asp-validation-for="Others" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update Offers" class="btn btn-dark btn-outline-danger" />
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
